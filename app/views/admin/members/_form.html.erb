<%= form_with(model: [:admin, member], local: true) do |form| %>
  <%= render 'admin/shared/errors', object: member %>
  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= form.label :contact_number %>
    <%= form.text_field :contact_number, class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= form.label :city %>
    <%= form.text_field :city, class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= form.label :state %>
    <%= form.text_field :state, class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= form.label :country %>
    <%= form.text_field :country, class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= form.label :zipcode %>
    <%= form.text_field :zipcode, class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= form.label :gender %>
    <%= form.text_field :gender, class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= form.label :date_of_birth %>
    <%= form.date_field :date_of_birth, class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= form.label :select_a_plan %>
    <%= form.select :member_plan, options_for_select(Plan.all.map {|plan| [plan.name, plan.id]}), {}, {class: 'form-control form-control-lg'} %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-lg btn-primary' %>
    <%= link_to 'Back', admin_members_path, class: 'btn btn-lg btn-secondary ml-2' %>
  </div>
<% end %>
