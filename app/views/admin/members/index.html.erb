<div class="mt-5">
  <%= search_form_for [:admin, @q], class: "form-inline my-2 my-lg-0"  do |f| %>
    <%= f.label :first_name_or_email_cont, "Search :", class: "mr-2" %>
    <%= f.search_field :first_name_or_email_cont, class: "form-control mr-sm-2" %>
    <%= f.submit class: "btn btn-outline-success my-2 my-sm-0" %>
  <% end %>
</div>
<div class="row mt-5">
  <div class="col-md-6">
    <h1>Members</h1>
  </div>
  <div class="col-md-6">
    <%= link_to 'New Member', new_admin_member_path, class: 'btn btn-lg btn-primary float-right' %>
  </div>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Gender</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member. name %></td>
        <td><%= member.email %></td>
        <td><%= member.gender %></td>
        <td>
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Actions
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <%= link_to 'Show', admin_member_path(member), class: "dropdown-item", data: { toggle: 'modal', target: '#memberDetailModal', remote: true } %>
              <%= link_to 'Edit', edit_admin_member_path(member), class: "dropdown-item" %>
              <%= link_to 'Destroy', admin_member_path(member), method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="modal fade-in" id="memberDetailModal" tabindex="-1" role="dialog" aria-labelledby="memberDetailModalLabel" aria-hidden="true">
</div>
