<p id="notice"><%= notice %></p>

<h1>Members</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Contact number</th>
      <th>Email</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Zipcode</th>
      <th>Address</th>
      <th>Gender</th>
      <th>Date of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.first_name %></td>
        <td><%= member.last_name %></td>
        <td><%= member.contact_number %></td>
        <td><%= member.email %></td>
        <td><%= member.city %></td>
        <td><%= member.state %></td>
        <td><%= member.country %></td>
        <td><%= member.zipcode %></td>
        <td><%= member.address %></td>
        <td><%= member.gender %></td>
        <td><%= member.date_of_birth %></td>
        <td><%= link_to 'Show', admin_member_path(member) %></td>
        <td><%= link_to 'Edit', edit_admin_member_path(member) %></td>
        <td><%= link_to 'Destroy', admin_member_path(member), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_admin_member_path, class: 'btn btn-lg btn-primary' %>
