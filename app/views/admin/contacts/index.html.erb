<div class="row mt-5">
  <div class="col-md">
    <h1>Contacts</h1>
  </div>
  <div class="col-md">
    <%= link_to 'Import CSV', '/admin/contacts-csv', class: 'btn btn-primary btn-lg float-right' %>
  </div>
</div>
<%= render "contacts_filter" %>
<table class="table table-bordered mt-2">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Message</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.message %></td>
        <td>
           <%= link_to 'Destroy', admin_contact_path(contact), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="modal fade-in" id="memberDetailModal" tabindex="-1" role="dialog" aria-labelledby="memberDetailModalLabel" aria-hidden="true">
</div>
